@using CamelontaEpi.Models.ViewModels
@using CamelontaEpi.Models.Pages
@model PageViewModel<BlogPostPage>

@{
    Layout = "~/Views/Shared/Layouts/_LeftNavigation.cshtml"; }

<div class="col-md-9">
    <h1 @Html.EditAttributes(x => x.CurrentPage.PageName)>@Model.CurrentPage.PageName</h1>
    <p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescription)>@Model.CurrentPage.MetaDescription</p>
    <div class="row">
        <div class="span9 clearfix" @Html.EditAttributes(x => x.CurrentPage.MainBody)>
            <img src="@Url.ContentUrl(Model.CurrentPage.PageImage)" />
